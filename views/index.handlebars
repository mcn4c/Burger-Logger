<h1>Eat-Da-Burger!</h1>

<div>
  <div class="row">
  <div class ="column">

<h2>Waiting to be Devoured</h2>

<ul>
  {{#each burgers}}
  {{#unless eaten }}
  {{> burger-block toeat=true}}
  {{/unless}}
  {{/each}}
</ul>

</div>


<div class ="column">
<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
  {{#if eaten}}
  {{> burger-block toeat=false}}
  {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>


<form id="create-form">
  <h2>Add a Burger</h2>

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>


  <button class="addbtn" type="submit">Add New Burger</button>
</form>